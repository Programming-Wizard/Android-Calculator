<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hapticFeedbackEnabled="true"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="360dp"
        android:layout_height="330dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="9"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="8"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="7"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="4"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="6"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="5"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="3"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonDouble0"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="00"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="6" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="0"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="6" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="1"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="2"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="."
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="6" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonSolve"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="="
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="6" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="+"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonSub"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="-"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="X"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="÷"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonModulus"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="%"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hapticFeedbackEnabled="true"
            android:text="C"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/backButtonImage"
            android:layout_width="61dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:hapticFeedbackEnabled="true"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/back_arrow" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="40dp"
        android:hapticFeedbackEnabled="true"
        android:text="0"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="346dp"
        android:layout_height="110dp"
        android:layout_marginTop="104dp"
        android:hapticFeedbackEnabled="true"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hapticFeedbackEnabled="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvCalculator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="true"
            android:paddingTop="30sp"
            android:text="Calculator"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_secondary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCurrencyCov"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="true"
            android:paddingTop="30sp"
            android:text="Convert INR / Dollar"
            android:textAlignment="center"
            android:textColor="@color/md_theme_dark_onBackground"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTempCov"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="30sp"
            android:text="convert °C / °F"
            android:textAlignment="center"
            android:textColor="@color/md_theme_dark_onBackground"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        style="@style/AppTheme"
        android:layout_width="86dp"
        android:layout_height="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#00FFFFFF" />

    <Button
        android:id="@+id/button10"
        android:layout_width="90dp"
        android:layout_height="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:hapticFeedbackEnabled="true"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button11"
        android:layout_width="90dp"
        android:layout_height="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:hapticFeedbackEnabled="true"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/button10"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>